# Environment Configuration Template
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control

APP_ENV=local
APP_DEBUG=false
APP_URL=http://localhost/sandik/

# Database Configuration
DB_HOST=localhost
DB_NAME=sandik
DB_USERNAME=root
DB_PASSWORD=

# Production Database (DO NOT COMMIT ACTUAL VALUES)
DB_HOST_PROD=localhost
DB_NAME_PROD=sandik
DB_USERNAME_PROD=your_username
DB_PASSWORD_PROD=your_secure_password

# Stripe Configuration (Get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here

# Security
CSRF_SECRET=your_random_secret_key_here
SESSION_SECRET=your_session_secret_here

# File Upload
MAX_UPLOAD_SIZE=5242880
UPLOAD_PATH=uploads/